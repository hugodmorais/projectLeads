<%= form_with model: lead, role: 'form', class: 'form-horizontal' do |f| %>
  <div class="row">
    <div class="col-xs-12 table">
      <div class="form-group <%= 'has-error' if lead.errors[:first_name].present? %>">
        <%= f.label :first_name, class: 'col-sm-2 control-label' do %>
        <%= 'First Name' %>
        <% end %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
          <% if lead.errors[:first_name].present? %>
            <span class="help-block text-danger">
              <small><%= lead.errors[:first_name].first %></small>
            </span>
          <% end %>
        </div>
      </div>
      <div class="form-group <%= 'has-error' if lead.errors[:last_name].present? %>">
        <%= f.label :last_name, class: 'col-sm-2 control-label' do %>
        <%= 'Last Name' %>
        <% end %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
          <% if lead.errors[:last_name].present? %>
            <span class="help-block text-danger">
              <small><%= lead.errors[:last_name].first %></small>
            </span>
          <% end %>
        </div>
      </div>
      <div class="form-group <%= 'has-error' if lead.errors[:zip_code].present? %>">
        <%= f.label :zip_code, class: 'col-sm-2 control-label' do %>
        <%= 'Zip Code' %>
        <% end %>
        <div class="col-sm-10">
          <%= f.text_field :zip_code, class: 'form-control', placeholder: 'Zip Code' %>
          <% if lead.errors[:zip_code].present? %>
            <span class="help-block text-danger">
              <small><%= lead.errors[:zip_code].first %></small>
            </span>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-offset-2 col-sm-10 m-t-15">
          <%= f.submit 'Save', class: 'btn btn-default btn-sm' %>
          <%= link_to 'Cancel', leads_path, class: "btn btn-white btn-sm waves-effect m-l-5" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
