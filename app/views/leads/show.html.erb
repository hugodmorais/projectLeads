<!-- Start Breadcrumb -->
<% @bread_links = [link_to('Lead', leads_url)] %>
<% @current_bread_name = @lead.first_name %>
<!-- End Breadcrumb -->

<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-border panel-custom">
      <div class="panel-heading">
        <h3 class="panel-title text-center"><%= 'Lead' %> </h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-xs-12 table-responsive">
            <form class="form-horizontal">
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= 'First Name' %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @lead.first_name %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= 'Last Name' %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @lead.last_name %></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label"><%= 'Zip Code' %></label>
                <div class="col-sm-10">
                  <p class="form-control-static"><%= @lead.zip_code %></p>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-9 m-t-15">
                  <%= link_to 'Go Back', leads_url, class: "btn btn-white btn-sm waves-effect" %>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
